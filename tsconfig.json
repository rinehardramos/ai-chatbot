{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@lambda/*": ["lambda/src/*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}